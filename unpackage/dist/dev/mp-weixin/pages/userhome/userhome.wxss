.box {
  height: 380rpx;
}
.box .pagehead {
  position: fixed;
  left: 0;
  top: 0;
  height: 300rpx;
  display: flex;
}
.box .pagehead .back {
  color: #FFFFFF;
  position: fixed;
  left: 30rpx;
  top: 50rpx;
}
.box .pagehead image {
  width: 750rpx;
  height: 300rpx;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
}
.box .pagehead .yh {
  display: flex;
  align-items: center;
  margin-left: 70rpx;
  margin-top: 128rpx;
}
.box .pagehead .yh .yhtx {
  width: 120rpx;
  height: 120rpx;
  background-color: #007AFF;
  border-radius: 50%;
  margin-right: 20rpx;
}
.box .pagehead .yh .yhsj {
  height: 100rpx;
  display: flex;
  flex-direction: column;
  font-family: PingFangSC-Medium;
  color: #FFFFFF;
  font-weight: 500;
}
.box .pagehead .yh .yhsj .yhm {
  font-size: 30rpx;
  letter-spacing: 0.05rpx;
}
.box .pagehead .yh .yhsj .yhfs {
  display: flex;
  margin-top: 10rpx;
  font-size: 22rpx;
  letter-spacing: 0.04rpx;
  text-align: center;
}
.box .pagehead .yh .yhsj .yhfs text {
  opacity: 0.5;
  margin-right: 30rpx;
}
.box .his {
  position: fixed;
  background-color: #FFFFFF;
