page {
  background-color: #F5F5F5;
}
.louzhu {
  background-color: #FFFFFF;
  display: flex;
  align-items: top;
}
.louzhu .toux {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin: 30rpx 10rpx 0 30rpx;
}
.louzhu .pinglun {
  margin-top: 30rpx;
  margin-right: 30rpx;
  font-family: PingFangSC-Regular;
  font-size: 20rpx;
  letter-spacing: 0.03rpx;
  font-weight: 400;
}
.louzhu .pinglun .id {
  opacity: 0.5;
  color: #000000;
}
.louzhu .pinglun .wenb {
  font-size: 24rpx;
  letter-spacing: 0.04rpx;
}
.louzhu .pinglun .last {
  opacity: 0.5;
  font-size: 22rpx;
  color: #000000;
  letter-spacing: 0.04rpx;
  text-align: center;
  width: 620rpx;
  display: flex;
  justify-content: space-between;
}
.louzhu .pinglun .last .nihao {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666666;
}
.louzhu .pinglun .last .nihao image {
  width: 36rpx;
  height: 36rpx;
}
.louzhu .pinglun .last .nihao .one {
  margin-right: 40rpx;
}
.persons {
  margin-top: 10rpx;
}
.persons .louzhu {
  background-color: #FAFAFA;
  margin-top: 4rpx;
}
.huifu {
  width: 750rpx;
  height: 128rpx;
  background-color: #FFFFFF;
  position: fixed;
  left: 0;
  bottom: 0;
}
.huifu .input {
  width: 690rpx;
  height: 88rpx;
  margin: 20rpx 30rpx 20rpx 30rpx;
  background-color: #F5F5F5;
  border-radius: 44rpx;
  line-height: 88rpx;
  padding-left: 30rpx;
  opacity: 0.5;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #666666;
  letter-spacing: 0.05rpx;
  font-weight: 400;
}

