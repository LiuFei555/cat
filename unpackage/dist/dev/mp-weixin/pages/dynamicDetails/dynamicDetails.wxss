.dynamic {
  margin-top: 2rpx;
  padding: 30rpx 30rpx 0 30rpx;
  background-color: #FFFFFF;
}
.dynamic .header {
  display: flex;
  justify-content: space-between;
}
.dynamic .header .userid {
  display: flex;
  align-items: center;
}
.dynamic .header .userid view {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #007AFF;
}
.dynamic .header .userid view image {
  width: 60rpx;
  height: 60rpx;
}
.dynamic .header .userid text {
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #000000;
  letter-spacing: 0.04rpx;
  font-weight: 400;
  margin-left: 10rpx;
}
.dynamic .contentText {
  width: 530rpx;
  box-sizing: border-box;
  margin-top: 30rpx;
}
.dynamic .contentText text {
  font-family: PingFangSC-Semibold;
  font-size: 28rpx;
  color: #3F3F3F;
  letter-spacing: 0.05rpx;
  font-weight: 600;
}
.dynamic .pic {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-top: 30rpx;
}
.dynamic .pic view {
  border-radius: 10rpx;
  border: 1rpx solid #E1E1E1;
}
.dynamic .pic view image {
  width: 224rpx;
  height: 224rpx;
}
.dynamic .address {
  margin-top: 6rpx;
  margin-bottom: 6rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 28rpx;
}
.dynamic .address text {
  text-align: center;
  margin-bottom: 6rpx;
  font-family: PingFangSC-Regular;
  font-size: 20rpx;
  color: #969494;
  letter-spacing: 0.03rpx;
  font-weight: 400;
}
.comments {
  background-color: #FFFFFF;
  padding: 30rpx 30rpx 0 30rpx;
}
.comments .head {
  display: flex;
  align-items: top;
  justify-content: space-between;
}
.comments .head .tx {
  width: 60rpx;
  height: 60rpx;
  background-color: #007AFF;
  border-radius: 50%;
}
.comments .head .right {
  width: 620rpx;
}
.comments .head .right .hello {
  display: flex;
  flex-direction: column;
}
.comments .head .right .hello .top {
  opacity: 0.5;
  font-family: PingFangSC-Regular;
  font-size: 20rpx;
  color: #000000;
  letter-spacing: 0.03rpx;
  font-weight: 400;
}
.comments .head .right .hello .content {
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #000000;
  letter-spacing: 0.04rpx;
  font-weight: 400;
}
.comments .head .right .ces {
  padding: 20rpx;
  margin-top: 10rpx;
  background-color: #F5F5F5;
}
.comments .head .right .ces .reply {
  line-height: 30rpx;
  font-family: PingFangSC-Regular;
  font-size: 20rpx;
  letter-spacing: 0.04rpx;
  font-weight: 400;
}
.comments .head .right .ces .reply .author_reply {
  display: flex;
  align-items: center;
  font-family: PingFangSC-Regular;
  color: #009FE1;
  letter-spacing: 0.03rpx;
  line-height: 28rpx;
  float: left;
}
.comments .head .right .ces .reply .author_reply .author {
  width: 41rpx;
  height: 24rpx;
  border-radius: 4rpx;
  background-image: linear-gradient(180deg, #8CE7A3 0%, #60C57A 100%);
  font-family: PingFangSC-Medium;
  font-size: 14rpx;
  color: #FFFFFF;
  letter-spacing: 0.02rpx;
  font-weight: 500;
  text-align: center;
  line-height: 24rpx;
}
.comments .head .right .ces .reply .rd {
  color: #000000;
  opacity: 0.6;
}
.comments .head .right .ces .replys {
  font-family: PingFangSC-Regular;
  font-size: 20rpx;
  color: #009FE1;
  letter-spacing: 0.03rpx;
  font-weight: 400;
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}
.comments .reply_footer {
  padding-left: 70rpx;
  display: flex;
  justify-content: space-between;
}
.comments .reply_footer .footer_left text {
  opacity: 0.5;
  font-family: PingFangSC-Regular;
  font-size: 22rpx;
  color: #000000;
  letter-spacing: 0.04rpx;
  font-weight: 400;
}
.comments .reply_footer .footer_left .date {
  margin-right: 10rpx;
}
.comments .reply_footer .footer_right {
  display: flex;
  align-items: center;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #666666;
  letter-spacing: 0.04rpx;
  text-align: right;
  font-weight: 400;
}
.comments .reply_footer .footer_right image {
  width: 36rpx;
  height: 36rpx;
}
.comments .reply_footer .footer_right .toreply {
  margin-top: 10rpx;
  margin-right: 40rpx;
}
.comments .reply_footer .footer_right .like {
  display: flex;
  align-items: center;
}
.comments .reply_footer .footer_right .like image {
  margin-right: 10rpx;
}
