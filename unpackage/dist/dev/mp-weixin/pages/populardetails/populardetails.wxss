page {
  background-color: #F5F5F5;
}
.page1 {
  padding: 31rpx 30rpx 0 30rpx;
  background-color: #FFFFFF;
}
.page1 .one {
  border-bottom: 10rpx solid #efefef;
}
.page1 .one .head {
  display: flex;
  align-items: center;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #000000;
  letter-spacing: 0.04rpx;
  font-weight: 400;
}
.page1 .one .head image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}
.page1 .one .title {
  width: 530rpx;
  margin-top: 19rpx;
  font-family: PingFangSC-Semibold;
  font-size: 28rpx;
  color: #3F3F3F;
  letter-spacing: 0.05rpx;
  font-weight: 600;
}
.page1 .one .picture {
  margin-top: 30rpx;
  height: 341rpx;
  width: 690rpx;
}
.page1 .one .picture image {
  width: 690rpx;
  height: 341rpx;
}
.page1 .one .content {
  margin-top: 30rpx;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #3F3F3F;
  letter-spacing: 0.04rpx;
  font-weight: 400;
}
.page1 .one .end {
  font-family: PingFangSC-Regular;
  font-size: 20rpx;
  color: #969494;
  letter-spacing: 0.03rpx;
  text-align: right;
  font-weight: 400;
  height: 28rpx;
  margin-right: 0;
  margin-top: 6rpx;
  margin-bottom: 6rpx;
}
.page1 .two {
  margin-top: 30rpx;
}
.page1 .two .goldpl {
  display: flex;
  align-items: top;
}
.page1 .two .goldpl .headepic {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #81D195;
}
.page1 .two .goldpl .another {
  margin-left: 10rpx;
  font-family: PingFangSC-Regular;
  color: #000000;
  font-weight: 400;
  font-size: 20rpx;
  letter-spacing: 0.03rpx;
}
.page1 .two .goldpl .another .uid {
  opacity: 0.5;
}
.page1 .two .goldpl .another .umsg {
  font-size: 24rpx;
  letter-spacing: 0.04rpx;
  margin-top: 4rpx;
  margin-bottom: 10rpx;
}
.page1 .two .goldpl .another .replys {
  height: 68rpx;
  width: 620rpx;
  background-color: #EFEFEF;
  color: #009FE1;
  display: flex;
  align-items: center;
}
.page1 .two .goldpl .another .replys text {
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.page1 .two .goldpl .gold_footer {
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #f5f5f5;
}
.page1 .two .goldpl .gold_footer image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
}
.page1 .page_footer {
  height: 128rpx;
  width: 750rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: #FFFFFF;
  display: flex;
  align-items: center;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #666666;
  letter-spacing: 0.04rpx;
  font-weight: 400;
}
.page1 .page_footer view {
  width: 370rpx;
  height: 88rpx;
  border-radius: 44rpx;
  background-color: #F5F5F5;
  padding-left: 30rpx;
  line-height: 88rpx;
  margin: 30rpx;
  margin-right: 65rpx;
  opacity: 0.5;
  font-size: 30rpx;
  letter-spacing: 0.05rpx;
}
.page1 .page_footer image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
}
.page1 .page_footer text {
  margin-right: 60rpx;
}

