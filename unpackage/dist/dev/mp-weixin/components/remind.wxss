page {
  background-color: #EFEFEF;
}
.empty {
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #666666;
  letter-spacing: 0.04rpx;
  text-align: center;
  font-weight: 400;
}
.empty image {
  width: 150rpx;
  height: 133rpx;
  margin: 354rpx 300rpx;
  margin-bottom: 30rpx;
}
.news {
  display: flex;
  padding: 30rpx;
  position: relative;
}
.news .newsimg {
  width: 60rpx;
  height: 60rpx;
  background-color: #F5F5F5;
  border-radius: 50%;
  margin-right: 20rpx;
}
.news .newsimg image {
  margin-left: 15rpx;
  margin-top: 15rpx;
  width: 30rpx;
  height: 30rpx;
}
.news .dianzan {
  display: flex;
  justify-content: space-between;
}
.news .dianzan .heihei {
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #000000;
  letter-spacing: 0.04rpx;
  font-weight: 400;
}
.news .dianzan .heihei .action {
  opacity: 0.5;
  font-size: 20rpx;
  letter-spacing: 0.03rpx;
}
.news .haha {
  position: absolute;
  right: 30rpx;
  top: 50rpx;
  height: 21rpx;
  width: 12rpx;
}

